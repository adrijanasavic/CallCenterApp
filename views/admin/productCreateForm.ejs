<%- include("./partials/adminTop.ejs") %>
    <%- include("./partials/adminSidebar.ejs") %>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card">
                        <form class="form-horizontal" action="/admin/create/product/save" method="POST">
                            <div class="card-body">
                                <h4 class="card-title">Kreiraj novo mesto</h4>
                                <div class="form-group row">
                                    <label for="fname"
                                        class="col-sm-3 text-right control-label col-form-label">Proizvod</label>
                                    <div class="col-sm-9">
                                        <input type="text" name="product" class="form-control" id="fname"
                                            placeholder="Naziv proizvoda">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lname"
                                        class="col-sm-3 text-right control-label col-form-label">Cena</label>
                                    <div class="col-sm-9">
                                        <input type="number" name="price" class="form-control" id="lname"
                                            placeholder="200">
                                    </div>
                                </div>

                            </div>
                            <div class="border-top">
                                <div class="card-body">
                                    <button type="submit" class="btn btn-primary">Dodaj</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <%- include("./partials/adminButtom.ejs") %>